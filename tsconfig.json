{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": ["dom", "es2015"],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declarationDir": "./dist",
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}